{
    "name": "css-global-properties",
    "type": "module",
    "version": "0.4.0",
    "packageManager": "pnpm@8.3.0",
    "description": "Framework agnostic management for CSS properties (variables)",
    "author": "Daniil Chumachenko <daniil4udo@gmail.com>",
    "license": "MIT",
    "repository": "daniil4udo/css-global-properties",
    "keywords": [
        "css",
        "css vars",
        "css variables",
        "css properties",
        "css global properties"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "build": "rimraf dist && tsup",
        "lint": "eslint . --color --fix --ignore-path .gitignore",
        "prepublishOnly": "pnpm typedoc && pnpm build",
        "release": "bumpp --commit --tag --no-push && pnpm publish --access public",
        "typedoc": "typedoc --readme .github/README.md --plugin typedoc-plugin-markdown ./lib/index.ts",
        "test": "vitest --ui",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@democrance/utils": "^0.19.1"
    },
    "devDependencies": {
        "@democrance/eslint-config": "^0.11.0",
        "@types/node": "^18.17.18",
        "@vitest/coverage-v8": "^0.34.4",
        "@vitest/ui": "^0.34.4",
        "@vue/tsconfig": "^0.4.0",
        "bumpp": "^9.2.0",
        "eslint": "^8.49.0",
        "jsdom": "^22.1.0",
        "prettier": "^3.0.3",
        "tsup": "^7.2.0",
        "typedoc": "^0.25.1",
        "typedoc-plugin-markdown": "^3.16.0",
        "typescript": "^5.2.2",
        "vitest": "^0.34.4"
    }
}
