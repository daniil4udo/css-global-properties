{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "baseUrl": ".",
        "importHelpers": true,
        "isolatedModules": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "env.d.ts",
        "./lib/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "tests/*"
    ]
}
